{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules" : {
        "no-console": "off",
        "quotes": [
            "error",
            "single"
        ],
        "linebreak-style": ["error", "windows"]  // changes the file to CRLF
    }
}
